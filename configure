PROJECT_NAME="logic_sniffer"

function usage() {
	cat <<EOF
Usage: ./configure [OPTION]... [VAR=VALUE]...

Sythesis configuration:
  --board=DIR           The path to the board file to sythesise for. Defaults
                        to none, in which case sythesis will be disabled.

EOF
	exit 0;
}

# Parse command line options

BOARD_DIR=""

OPTS=`getopt -o h -l board:,help -- "$@"`
if [ $? != 0 ]
then
	exit 1
fi

eval set -- "$OPTS"

while true ; do
	case "$1" in
	--board) BOARD_PATH="$2"; shift 2;;
	-h | --help) usage; break;;
	--) shift; break;;
	esac
done

# Write the configuration out
cat > config <<EOF
PROJECT_NAME=$PROJECT_NAME
BOARD_PATH=$BOARD_PATH
EOF

# Setup the makefile
cp Makefile.in Makefile
